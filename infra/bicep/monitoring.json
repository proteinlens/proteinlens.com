        "description": "Alert when API error rate exceeds 5% over 5 minutes (Feature 011: Observability)",
        "severity": 1,
        "enabled": true,
        "scopes": [
          "[resourceGroup().id]"
        ],
        "evaluationFrequency": "PT1M",
        "windowSize": "PT5M",
        "criteria": {
