        ],
        "windowSize": "PT10M",
        "criteria": {
          "allOf": [
            {
              "query": "            requests\n            | where name contains \"health\" and resultCode != \"200\"\n            | summarize FailedCount = count() by bin(timestamp, 5m)\n            | where FailedCount >= 2\n          ",
              "timeAggregation": "Count",
              "operator": "GreaterThan",
              "threshold": 0,
              "failingPeriods": {
