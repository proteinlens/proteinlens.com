      "location": "[parameters('location')]",
      "properties": {
        "displayName": "AI API Usage Alert",
        "description": "Alert when AI API calls approach monthly limit",
        "severity": 2,
        "enabled": true,
        "evaluationFrequency": "PT1H",
        "scopes": [
